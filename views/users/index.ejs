<div>
<h2>User Table</h2>
<table class="table">
  <thead>
    <tr>
      <th>NameWords</th>
      <th>Name</th>
      <th>Email</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>
    <% users.forEach(user => { %>
      <tr>
        <td><%= user.fullNameWords %></td>
        <td>
          <a href="<%= `/users/${user._id}` %>">
            <%= user.fullName %>
          </a>
        </td>
        <td><%= user.email %></td>
        <td><a href="<%= `/users/${user._id}/edit` %>">Edit</a></td>
        <td>
          <a href="<%= `/users/${user._id}/delete?_method=DELETE` %>" onclick="return confirm('Are you sure you want to delete this record?')">
            Delete
          </a>
        </td>
      </tr>
    <% }); %>
    <hr>
  </tbody>
</table>
</div>