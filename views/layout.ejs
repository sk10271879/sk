<!DOCTYPE html>
<html lang="ja">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<meta name="description" content="適当チャットルーム">
	<script type="text/javascript" src="/js/jquery.min.js"></script>
	<script type="text/javascript" src="/js/bootstrap.min.js"></script>
  <script type="text/javascript" src="/js/recipeApp.js"></script>
  <script src="/socket.io/socket.io.js"></script>
  <link rel="stylesheet" href="/css/bootstrap.css">
	<link rel="stylesheet" href="/css/style.css">
	<title>Confetti Cuisine</title>
</head>
<body>
  <a href="/chat" class="chat-icon">@</a>
  <div id="nav">
    <div class="nav">
      <div class="col-sm nav-align">
        <h1 id="title">チャットスペース</h1>
      </div>
      <div class="col-sm nav-align">
        <a href="/"><span class="button">Home</span></a>
        <a href="/chat"><span class="button">Chat</span></a>
        <a href="/users"><span class="button">Users</span></a>
        <a href="/users/new"><span class="button">Users Create</span></a>
      </div>
    </div>
    <!-- ログイン情報 -->
    <div class="login-status">
      <% if (loggedIn) { %>
      <div class="bubble logged-in">
        Logged in as <a href="<%=`/users/${currentUser._id}`%>">
          <%= currentUser.fullName %></a>
      </div>
      <div class="log-out">
        <a href="/users/logout">Log out</a>
      </div>
      <%} else {%>
      <div class="bubble log-in">
        <a href="/users/login">ログイン!!!!!!!!!!!</a>
      </div>
      <% }; %>
    </div>
  </div>
  <!-- メッセージ情報 -->
  <div class="flashes">
    <% if(flashMessages){ %>
      <% if(flashMessages.success){ %>
        <div class="flash success"><%= flashMessages.success %></div>
      <% }else if(flashMessages.error){ %>
        <div class="flash error"><%= flashMessages.error %></div>
      <% }; %> 
    <% }; %> 
  </div>
  <%- body %> 
  <div id="footer">FOOTER</div>
</body>